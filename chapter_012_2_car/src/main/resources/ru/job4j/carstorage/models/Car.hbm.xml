<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="ru.job4j.carstorage.models.Car" table="cars">
        <id name="id" column="car_id">
            <generator class="identity"/>
        </id>
        <property name="description" column="description" not-null="true" unique="true"/>

        <many-to-one name="person" column="person_id" not-null="true"
                     class="ru.job4j.carstorage.models.Person"/>

        <many-to-one name="brandedModel" column="bm_id"
                     class="ru.job4j.carstorage.models.BrandedModel"/>

        <many-to-one name="engine" column="engine_id"
                     class="ru.job4j.carstorage.models.Engine"/>

        <many-to-one name="gearbox" column="gearbox_id"
                     class="ru.job4j.carstorage.models.Gearbox"/>

        <many-to-one name="body" column="body_id"
                     class="ru.job4j.carstorage.models.Body"/>

        <many-to-one name="colour" column="colour_id"
                     class="ru.job4j.carstorage.models.Colour"/>

    </class>
</hibernate-mapping>